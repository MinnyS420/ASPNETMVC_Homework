@model List<OrderListViewModel>

<div class="text-center">
    <a asp-action="Create" asp-controller="Order" class="btn btn-outline-success">Create order</a>
    <h2 class="display-4">List of orders:</h2>
</div>

<br />

<div class="row">
    @foreach (var order in Model)
    {
        string cardColor = order.IsDelivered ? "success" : "danger";

        <div class="card text-white bg-@cardColor mb-3" style="max-width: 18rem; margin-left: 10px;">
            <div class="card-header">
                @if (order.IsDelivered)
                {
                    <span>The order was delivered</span>
                }
                else
                {
                    <span>The order was not delivered</span>
                }
            </div>
            <div class="card-body">
                <h5 class="card-title">FullName: @order.FullName</h5>
                <ol>
                    @foreach (var burgerNames in order.BurgerNames)
                    {
                        <li>@burgerNames</li>
                    }
                </ol>
            </div>
            <a asp-controller="Order" asp-action="Details" asp-route-id="@order.Id" class="text-white">See details</a>
            <a asp-controller="Order" asp-action="Edit" asp-route-id="@order.Id" class="text-white">Edit order</a>
            <a asp-controller="Order" asp-action="Delete" asp-route-id="@order.Id" class="text-white"
               onclick="return confirm('Are you sure you want to delete this order?')">Delete order</a>
        </div>
    }
</div>
